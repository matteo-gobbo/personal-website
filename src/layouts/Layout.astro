---
interface Props {
    title: string;
}

const { title } = Astro.props;

import "@fontsource/poppins";
import { ClientRouter } from "astro:transitions";
import "../../tailwind.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Hi I'm Matteo Gobbo. I build things for the web."
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>

        <ClientRouter />
    </head>
    <body class="bg-customDarkGrey text-customWhite">
        <main class="mx-auto md:max-w-5xl max-w-xs md:mt-16 mt-12">
            <slot />
        </main>
    </body>
</html>
