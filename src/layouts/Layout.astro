---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "@fontsource/poppins";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="bg-slate-400 py-4">
      <div class="flex justify-between mx-auto max-w-7xl">
        <div>Logo</div>
        <div class="flex">
          <div class="mr-4"><a href="/">Home</a></div>
          <div><a class="mr-4" href="/blog">Blog</a></div>
          <div><a href="/side-projects">Side Projects</a></div>
        </div>
      </div>
    </header>
    <slot />
  </body>
</html>
