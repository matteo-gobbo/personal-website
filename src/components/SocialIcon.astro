---
interface Props {
    href: string;
    src: string;
    alt: string;
}

const { href, src, alt } = Astro.props;
---

<style>
    img {
        border-radius: 100%;
        height: 26px;
        width: 26px;
        padding: 0.25rem;
        background-color: var(--dark-blue);
    }
</style>
<a target="_blank" href={href}>
    <img
        src={src}
        alt={alt}
        height="26"
        width="26"
        style="fill: white;"
        loading="lazy"
    />
</a>
